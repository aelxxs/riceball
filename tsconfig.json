{
	"compilerOptions": {
		// Type Checking
		"strict": true,
		"pretty": true,

		// Modules
		"module": "CommonJS",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"skipLibCheck": true,

		// Emit
		"sourceMap": true,
		"inlineSources": true,
		"importHelpers": true,
		"noEmitHelpers": true,
		"removeComments": false,
		"esModuleInterop": true,

		// Lang and Env
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	}
}
