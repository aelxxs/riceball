root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,json}]
indent_size = 4
indent_style = tab
block_comment_start = /*
block_comment = *
block_comment_end = */
max_line_length = 120

[*.{yaml}]
indent_size = 2
indent_style = space

[*.{md}]
tab_width = 4
trim_trailing_whitespace = false

[*.{ps1}]
max_line_length = 115
indent_size = 4
indent_style = space