{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on"
			}
		}
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/project/**",
			"**/shared/**",
			"!**/.svelte-kit",
			"!**/dist",
			"!**/generated",
			"!**/build",
			"!**/node_modules",
			"!**/shared/database/temp/metadata.json"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120,
		"useEditorconfig": true
	},
	"javascript": {
		"formatter": {
			"operatorLinebreak": "before",
			"quoteStyle": "double"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"linter": {
		"enabled": true,
		"includes": [
			"**",
			"!**/.svelte-kit",
			"!**/dist",
			"!**/generated",
			"!**/build",
			"!**/node_modules",
			"!**/shared/database/temp/metadata.json"
		],
		"rules": {
			"recommended": true
		}
	},
	"overrides": [
		{
			"includes": ["**/*.svelte"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					}
				}
			}
		}
	],
	"vcs": {
		"clientKind": "git",
		"enabled": false,
		"useIgnoreFile": false
	}
}
